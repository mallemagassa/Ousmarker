{% extends 'base.html.twig' %}

{% block title %} Checkout AliExprass !{% endblock %}

{% block body %}

{{ include("partials/title_section.html.twig", {'name':'La caise'}) }}

<div class="section checkout">
	<div class="container">
        {{ form_start(checkout, {action: path('checkout_confirm')}) }}
        <div class="row">
        	<div class="col-md-6">
                <div class="heading_s1">
                        <h4>Votre adresse de livraison</h4>

                        <div class="content">
                            {{ form_widget(checkout.address) | replace({'[spr]' : '<br>'}) | raw}}
                        </div>
                        <a href="{{ path('address_new')}}" class="btn btn-fill-out btn-block mt-1">Ajouter une nouvelle adresse</a>
                </div>
             
                <div class="heading_s1">
                    <h4>Information additionnelle</h4>
                    <div class="form-group mb-0">
                        {{ form_widget(checkout.informations) }}
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="order_review">
                    <div class="heading_s1">
                        <h4>Votre Commandes</h4>
                    </div>
                    <div class="table-responsive order_table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <tbody>
                                    {% for element in cart.products %}
                                    <tr>
                                        <td> {{ element.product.name }} <span class="product-qty">x {{ element.quantity }}</span></td>
                                        <td>{{ element.product.price/100 }} FCFA</td>
                                    </tr>
                                    {% endfor %}
 
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Sous-Total HT</th>
                                    <td class="product-subtotal">{{ cart.data.subTotalHT }} FCFA</td>
                                </tr>
                                <tr>
                                    <th>Taxe</th>
                                    <td class="product-subtotal">{{ cart.data.Taxe }} FCFA</td>
                                </tr>
                                <tr>
                                    <th>Total</th>
                                    <td class="product-subtotal">{{ cart.data.subTotalTTC }} FCFA</td>
                                </tr>
                            </tfoot>

                        </table>
                    </div>
                    <div class="payment_method">
                        <div class="heading_s1">
                            <h4>Commande</h4>
                        </div>
                        
                    </div>
                    <button type="submit" id="checkout-button" class="btn btn-fill-out btn-block">Passer la commande</button>
                </div>
            </div>
        </div>
        {{ form_end(checkout) }}
    </div>
</div>


{% endblock %}
